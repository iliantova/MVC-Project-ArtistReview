@model ArtistReview.Web.ViewModels.Categories.PagingCategoryViewModel
@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <div class="row text-center">
        <div class="well">
            <h2>Categories</h2>
        </div>
         <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-2">
                            <h2><span class="label label-warnings"><a href="@Url.Action("Details", "Categories", new { id = category.Id })" class="speacial-a">@category.Name</a></span></h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            @category.Description
                            <a href="@Url.Action("Details", "Categories", new { id = category.Id})"><img class="imageGalery img-rounded" src="@Url.Content(@category.ImagePath)" style="width: 10em; height: 10em" /></a>
                        </div>
                    </div>
                </div>}
        </div>
    </div>
    <div class="text-center">
        <nav>
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li>
                        <a href="@Url.Action("Index", "Home", new {pageIdProfile = TempData["Profile"], pageIdCategory = Model.CurrentPage-1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>}
                @for (int i = 1; i < Model.TotalPages; i++)
                {
                    var className = string.Empty;
                    if (Model.CurrentPage == i)
                    {
                        className = "active";
                    }
                    <li class="@className"><a href="@Url.Action("Index", "Home", new {pageIdProfile = TempData["Profile"], pageIdCategory = @i })">@i</a></li>}
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li>
                        <a href="@Url.Action("Index", "Home", new {pageIdProfile = TempData["Profile"], pageIdCategory = Model.CurrentPage+1})" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>}
            </ul>
        </nav>
    </div>
</div>
